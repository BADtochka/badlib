{
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2019",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "jsx": "react-jsx",
    /* Module system */
    "module": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    /* Interop & compatibility */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    /* Performance / DX */
    "skipLibCheck": true,
    /* Pathing */
    "baseUrl": "./src"
  },
  "include": [
    "src"
  ],
}
